<Window x:Class="WpfCustomUserControlsWithEventsDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCustomUserControlsWithEventsDemo"
        
        xmlns:uc="clr-namespace:WpfCustomUserControlsWithEventsDemo.UserControls"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="800">
    <TabControl x:Name="tabs">
        
        <!--First custom user control-->
        <TabItem x:Name="nameAgeTab" Header="Name and Age">
            <uc:NameAgeUC x:Name="nameAgeUC"/>
        </TabItem>

        <!--Second custom user control-->
        <TabItem x:Name="greetingTab" Header="Greeting">
            <uc:GreetingUC x:Name="greetingUC"/>
        </TabItem>
    </TabControl>
</Window>
